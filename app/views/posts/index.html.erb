<div>
  <% @posts.each do |post| %>
    <div  img class="imagezone" >
      <% if user_signed_in? && current_user.id == post.user_id %>

        <div class="image">
          <%= image_tag post.image.url %><br>
          <%= post.user.nickname %><br>
          <!-- like機能 -->


          <%= link_to '地図を開く', "/posts/#{post.id}", method: :get, class:"btn" %>

          <div class="description">
            <p><%= post.title %></p>
          </div>
        </div>
    </div>

    <div class="sidebar">
      <div class="ranking">

      </div>
    </div>

      <% end %>
    <% end %>
    <div class="paginate">
      <%= paginate(@posts) %>
    </div>
</div>
