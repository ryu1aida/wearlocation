<div>
  <% @posts.each do |post| %>
    <div  img class="imagezone" >
      <% if user_signed_in? && current_user.id == post.user_id %>

        <div class="image">
          <%= image_tag post.image.url %><br>
          <%= post.user.nickname %><br>
          <!-- like機能 -->
          <% if user_signed_in? %>
            <% if post.like_user(current_user.id) %>
              <%= button_to post_like_path(like, post_id: post.id), method: :delete, id: "like-button", remote: true do %>
                <%= image_tag("icon_red_heart.svg") %>
                <span>
                  <%= post.like_count %>
                </span>
              <% end %>
            <% else %>
              <%= button_to post_likes_path(post), id: "like-button", remote: true do %>
                <%= image_tag("icon_heart.svg") %>
                <span>
                  <%= post.like_count %>
                </span>
              <% end %>
            <% end %>
          <% else %>
            <%= image_tag("icon_heart.svg") %>
              <span>
                <%= post.like_count %>
              </span>
          <% end %>


          <%= link_to '地図を開く', "/posts/#{post.id}", method: :get, class:"btn" %>

          <div class="description">
            <p><%= post.title %></p>
          </div>
        </div>
    </div>

    <div class="sidebar">
      <div class="ranking">

      </div>
    </div>

      <% end %>
    <% end %>
    <% end %>
    <div class="paginate">
      <%= paginate(@posts) %>
    </div>
</div>
