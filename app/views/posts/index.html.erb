<div>
  <% @posts.each do |post| %>
    <div  img class="imagezone" >
      <% if user_signed_in? && current_user.id == post.user_id %>

          <div class="image">
          <img><%=   image_tag post.image %><br>
          </div>

          <div class="detailzone">
            <ul class="more_list">
              <li>
                <%= link_to '削除', "/posts/#{post.id}", method: :delete %>
              </li>
              <li>
                <%= link_to '編集', "/posts/#{post.id}/edit", method: :get %>
              </li>
            </ul>
              <div class="description">
                <p><%= post.title %></p>
                  <%= post.user.nickname %>
              </div>
          </div>
    </div>
      <% end %>
  <% end %>
    <div class="paginate">
      <%= paginate(@posts) %>
    </div>
</div>
