<div class="contents">
  <% if false %>
    <div class="new_content">
      <%= form_tag('/posts', method: :post) do %>
        <h1>
          投稿する
        </h1>

        <%= form_for(@post) do |f| %>
          <div>
            タイトルを入力<br>
            <%= f.text_field :title %><br>
            <%= f.file_field :image %><br>
            <%= f.text_field :name %><br>
            <%= f.text_field :description %><br>
            <%= f.text_field :latitude %><br>
            <%= f.text_field :longitude %><br>
            <div class="field">
              <%= f.label :tag, "タグをつける" %><br>
              <%= f.text_field_tag 'tags[name]', @post.tag_list.join(','), "data-role" => "tagsinput" %>
            </div>
          </div>
            <%= f.submit '投稿する' %>
          <input type="submit" value="SEND">
        <% end %>
      <% end %>
    </div>
  <% end %>


  <div class="post_box">
    <%= form_for @post do |f| %>
      <!-- <%= f.text_field :title, placeholder: 'title' %><br> -->

      <div class="field">
        <%= f.label :image, "画像を選択する" %>
          <!-- <div class="file_field"> -->
            <%= f.file_field :image   %>
          <!-- </div> -->
      </div>

      <div class="field">
        <%= f.label :tag, "タグをつける" %>
          <!-- <div class="tag_field"> -->
            <%= text_field_tag :tag_list, @post.tag_list, "data-role" => "tagsinput", :class => "post_tag" %>
          <!-- </div> -->
      </div>

      <div class="btn_field">
        <%= button_to "投稿", { :action => "create" }, :class => "btn"  %>
      </div>

    <% end %>
  </div>

</div>
